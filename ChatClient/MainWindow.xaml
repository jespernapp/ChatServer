<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client"
        Height="550" Width="600"
        MinWidth="400" MinHeight="400"
        ResizeMode="CanResize">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF6C5B7B"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#FF8e8D92"/>
        <SolidColorBrush x:Key="LightBackground" Color="#FFFDFDFD"/>
        <SolidColorBrush x:Key="TextColor" Color="#333333"/>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource LightBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="textBoxBorder"
                                CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="textBoxBorder" Property="Background" Value="#FFCCCCCC"/>
                                <Setter TargetName="textBoxBorder" Property="BorderBrush" Value="#FFB0B0B0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="border" Property="Background" Value="#FF5C4A6B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3C2A4B"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="border" Property="Background" Value="#FFCCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Chat area -->
            <RowDefinition Height="Auto"/>
            <!-- Typing indicator -->
            <RowDefinition Height="Auto"/>
            <!-- User/connection controls -->
            <RowDefinition Height="Auto"/>
            <!-- Message input + send -->
        </Grid.RowDefinitions>

        <!-- Chat and user list -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0" LastChildFill="True" Margin="0,0,5,0">
                <TextBlock Text="LiveLog"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="5"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource TextColor}"
                           DockPanel.Dock="Top"/>
                <ListBox x:Name="ChatList"
                     Grid.Column="0"
                     FontFamily="Consolas"
                     FontSize="14"
                     Background="{StaticResource LightBackground}"
                     Foreground="{StaticResource TextColor}"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </DockPanel>
            <DockPanel Grid.Column="1" LastChildFill="True" Margin="5,0,0,0">
                <TextBlock Text="Users"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="5"
                           Foreground="{StaticResource TextColor}"
                           DockPanel.Dock="Top"
                           HorizontalAlignment="Center"/>
                <ListBox x:Name="UserList"
                     Grid.Column="1"
                     Background="{StaticResource LightBackground}"
                     Foreground="{StaticResource TextColor}"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </DockPanel>
        </Grid>

        <!-- Typing indicator -->
        <TextBlock x:Name="TypingIndicator"
                   Grid.Row="1"
                   FontStyle="Italic"
                   Foreground="{StaticResource SecondaryColor}"
                   Margin="5,5,0,10"/>

        <!-- Connection controls -->
        <Grid Grid.Row="2" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="UsernameBox"
                     Grid.Column="0"
                     Width="85"
                     Text="Name"/>

            <Button x:Name="ConnectButton"
                    Grid.Column="1"
                    Content="Connect"
                    Click="ConnectButton_Click"
                    Width="75"/>

            <Button x:Name="DisconnectButton"
                    Grid.Column="2"
                    Content="Disconnect"
                    Click="DisconnectButton_Click"
                    Width="85"/>
        </Grid>

        <!-- Message input and send -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="MessageInput"
                     Text="Message"
                     Grid.Column="0"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     MinHeight="40"
                     MaxHeight="100"
                     VerticalContentAlignment="Top"
                     Margin="0,0,5,0"/>

            <Button x:Name="SendButton"
                    Grid.Column="1"
                    Content="Send"
                    Click="SendButton_Click"
                    Width="70"/>
        </Grid>
    </Grid>
</Window>