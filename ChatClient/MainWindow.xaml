<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="ChatLog" Grid.Row="0" Height="200" Margin="0,0,0,10" 
                 IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

        <ListBox x:Name="ChatList" Height="200" Margin="0,0,0,10"
                 FontFamily="Consolas" FontSize="14" Background="#FFFDF6F0"/>

        <ListBox x:Name="UserList" Grid.Row="0" HorizontalAlignment="Right" Width="100" Margin="10, 0, 0, 10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="UsernameBox" Width="100" Margin="0,0,10,0" Text="Namn"/>
            <TextBox x:Name="MessageInput" Width="200" Text="Meddelande"/>
        </StackPanel>

        <Button x:Name="ConnectButton" Content="Connect" Click="ConnectButton_Click"
        
        <Button Grid.Row="2" Content="Skicka" Click="SendButton_Click" Height="30"/>
        
    </Grid>
</Window>
