<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="350" Width="400">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF6C5B7B"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#FF8e8D92"/>
        <SolidColorBrush x:Key="LightBackground" Color="#FFFDFDFD"/>
        <SolidColorBrush x:Key="TextColor" Color="#333333"/>
        
        <!-- Rounded buttons-->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF5C4A6B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="ChatList" Grid.Column="0" Height="200"
                     FontFamily="Consolas" FontSize="14"
                     Background="{StaticResource LightBackground}"
                     Foreground="{StaticResource TextColor}" Margin="0,0,10,0"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>

            <ListBox x:Name="UserList" Grid.Column="1" Height="200"
                     Background="{StaticResource LightBackground}"
                     Foreground="{StaticResource TextColor}"
                     Width="Auto" Margin="10,0,0,0"/>


            <TextBlock x:Name="TypingIndicator" FontStyle="Italic" Margin="0,201,10,-14" Foreground="Gray"/>

        </Grid>
        <!--Usernames, messages and connect-->

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
            <TextBox x:Name="UsernameBox" Width="85" Height="40" Margin="5" Text="Name"
                     Background="{StaticResource LightBackground}" Foreground="{StaticResource TextColor}"/>
            <Button x:Name="ConnectButton" Content="Connect" Click="ConnectButton_Click" Height="40" Width="65" Margin="5"
                    Background="{StaticResource PrimaryColor}" Foreground="White"/>
            <Button x:Name="DisconnectButton" Content="Disconnect" Click="DisconnectButton_Click" Height="40" Width="75" Margin="5"
                    Background="{StaticResource PrimaryColor}" Foreground="White"/>
            <TextBox x:Name="MessageInput" Width="160" Height="40" Margin="5" Text="Message"
                     Background="{StaticResource LightBackground}" Foreground="{StaticResource TextColor}"/>
        </StackPanel>

            <!-- Send Button -->
        <Button Grid.Row="2" Content="Send" Click="SendButton_Click" Height="30"
                Background="{StaticResource PrimaryColor}" Foreground="White"/>
    </Grid>
</Window>

